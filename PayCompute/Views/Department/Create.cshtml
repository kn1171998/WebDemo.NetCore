@model DepartmentCreateViewModel
@{
    ViewBag.Title = "Department";
}

<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Department List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">New Department</li>
                </ol>
            </nav><br /><br />
            <form method="post" asp-controller="Department" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="DepartmentCode"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="DepartmentCode" class="form-control" placeholder="DEPT000" />
                        <span asp-validation-for="DepartmentCode" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="DepartmentName"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="DepartmentName" class="form-control" placeholder="Enter Department Name" />
                        <span asp-validation-for="DepartmentName" class="text-danger"></span>
                    </div>
                </div>
          
                <div class="form-group">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" placeholder="Enter Address..." />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <<br /><br />
                <div class="form-group">
                    <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Save</button>
                    <a asp-controller="Department" asp-action="Index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
                    <br />
                    <br />
                    <br />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{ @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
}}