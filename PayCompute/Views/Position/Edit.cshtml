@model PositionEditViewModel
@{
    ViewData["Title"] = "Postion";
}
<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Postion Edit</a></li>
                    <li class="breadcrumb-item active" aria-current="page">New Postion</li>
                </ol>
            </nav><br /><br />
            <form method="post" asp-controller="Position" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                <div class="form-row">
                    <div class="form-group col-md-2">
                        <label asp-for="PositionJobCode"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="PositionJobCode" class="form-control" placeholder="POS000" />
                        <span asp-validation-for="PositionJobCode" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="PositionJobName"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="PositionJobName" class="form-control" placeholder="Enter Position Name" />
                        <span asp-validation-for="PositionJobName" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label asp-for="InsuranceMoney"></label>
                    <input asp-for="InsuranceMoney" class="form-control" placeholder="Enter Insurance Money..." />
                    <span asp-validation-for="InsuranceMoney" class="text-danger"></span>
                </div>
                <<br /><br />
                <div class="form-group">
                    <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fas fa-plus-square" style="margin-right:0.7em"></i>Save</button>
                    <a asp-controller="Position" asp-action="Index" class="btn btn-rounded btn-success float-right"><i class="fas fa-caret-square-left" style="margin-right:0.7em"></i>Back</a>
                    <br />
                    <br />
                    <br />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{ @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
}}
